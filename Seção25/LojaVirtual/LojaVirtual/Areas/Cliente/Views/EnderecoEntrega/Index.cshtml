
@{
    ViewData["Title"] = "Listagem de endereços para entrega";
}

<br />
<br />

<div class="container">  
    <div class="row">
       
        <div class="col-md-12">
            <a asp-action="Index" asp-controller="Cliente" class="btn btn-outline-primary btn-sm">Voltar</a>
            <br />
            <br />

            @{ await Html.RenderPartialAsync("~/Views/Shared/_Mensagem.cshtml");}

            <table class="table table-hover">

                <tbody>
                    <tr>
                        <td>
                            <label for="0-end">
                                <strong>Nome: </strong>Endereço no cadastro cliente.
                                <p>
                                    @ViewBag.Cliente.CEP   | @ViewBag.Cliente.UF | @ViewBag.Cliente.Cidade | @ViewBag.Cliente.Bairro | @ViewBag.Cliente.Logradouro
                                </p>
                            </label>
                        </td>
                        <td>
                            <a asp-action="Atualizar" asp-controller="Cliente" class="btn btn-secondary btn-sm">Atualizar</a>
                            <a asp-action="Excluir" asp-route-id="@ViewBag.Id" class="btn btn-danger btn-sm disabled">Excluir</a>
                        </td>
                    </tr>

                    @foreach (EnderecoEntrega enderecoEntrega in ViewBag.Enderecos)
                    {
                        <tr>
                            <td>
                                <label for="@enderecoEntrega.Id-end">
                                    <strong>Nome: </strong>@enderecoEntrega.Nome
                                    <p>
                                        @enderecoEntrega.CEP | @enderecoEntrega.UF | @enderecoEntrega.Cidade | @enderecoEntrega.Bairro | @enderecoEntrega.Logradouro
                                    </p>
                                </label>
                            </td>
                            <td>
                                <a asp-action="Atualizar" asp-route-id="@enderecoEntrega.Id" class="btn btn-secondary btn-sm">Atualizar</a>
                                <a asp-action="Excluir" asp-route-id="@enderecoEntrega.Id" class="btn btn-danger btn-sm">Excluir</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>


            <div class="text-center">
                <a asp-action="Cadastrar" class="btn btn-outline-primary">Cadastra novo endereço</a>
            </div>

        </div>
    </div>
</div>
