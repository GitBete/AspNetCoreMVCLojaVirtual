@model LojaVirtual.Models.Pedido
@{
    ViewData["Title"] = "Index";

    decimal valorTotal = 0;
}

<br />
<br />

<div class="container"

    <div class="row">
        <div class="col-md-12" text-center>
            <h1>Pedido nº @Model.Id - @Model.TransactionId</h1>

        <table class="table table-bordered">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Quantidade</th>
                <th>Valor</th>
            </tr>
        </thead>

        @foreach (ProdutoItem produto in ViewBag.Produtos)
        {
            valorTotal += (produto.QuantidadeProdutoCarrinho * produto.Valor);
            <tr>
                <td>@produto.Nome</td>
                <td>@produto.QuantidadeProdutoCarrinho</td>
                <td>
                @((produto.QuantidadeProdutoCarrinho * produto.Valor).ToString("C"))
                (@produto.Valor.ToString("C") unid)
                </td>
            </tr>
        }

        <tr>
        <td colspan="2">Frete</td>
            <td>
                @{
                    var frete = @Mascara.ConverterPagarMeIntDecimal(ViewBag.Transacao.Shipping.Fee);
                    valorTotal += frete;
                }
                frete.ToString("C")
            </td>
        </tr>
        <tr>
            <td colspan="2">TOTAL</td>
            <td>
                @valorTotal.ToString("C");
            </td>
        </tr>
        </table>

            @if (Model.FormaPagamento == MetodoPagamentoConstant.Boleto)
            {
                <h3>Boleto</h3>
            }

            <a asp-action="Index" asp-controller="Home" class="btn btn-outline-primary btn-lg">Voltar a comprar</a>
        </div>
    </div>
</div>

